<form id="recipe-form" class="flex flex-col justify-center bg-green-300 w-1/3 h-1/2 border-black border-2 divShadow rounded-md">
        <div class="flex justify-center">
            <input type="text" id="recipeName" name="recipeName" required placeholder="Recipe Name" class="text-center m-1 text-lg w-4/5 border-black border-2"/>
        </div>
        <div class="flex justify-center">
            <textarea id="ingredients" name="ingredients" required placeholder="Ingredients" class="text-center m-1 text-lg w-4/5 border-black border-2"></textarea>
        </div>
        <div class="flex justify-center">
            <textarea id="prepInstructions" name="prepInstructions" required placeholder="Preparation Instructions" class="text-center m-1 text-lg w-4/5 border-black border-2"></textarea>
        </div>
        <div class="flex justify-center">
            <input type="text" id="totalPrepTime" name="totalPrepTime" required placeholder="Total Prep Time (mins)" class="text-center m-1 text-lg w-4/5 border-black border-2"/>
        </div>
        <div class="flex justify-center">
            <textarea id="cookInstructions" name="cookInstructions" required placeholder="Cooking Instructions" class="text-center m-1 text-lg w-4/5 border-black border-2"></textarea>
        </div>
        <div class="flex justify-center">
            <input type="text" id="totalCookTime" name="totalCookTime" required placeholder="Total Cook Time (mins)" class="text-center m-1 text-lg w-4/5 border-black border-2"/>
        </div>
        <div class="flex justify-center">
            <input type="text" id="picture" name="picture" placeholder="Picture Example: 001.jpg" class="text-center m-1 text-lg w-4/5 border-black border-2"/>
        </div>
        <div class="flex justify-center">
            <button type="submit" class="my-5 w-32 btnHover divShadow rounded-md text-xl border-black border-2 text-center">Submit</button>
        </div>
      </form>